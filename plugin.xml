<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.w3.org/ns/widgets"
    id="nat-media-audio"
    version="0.1.0">
    <name>nat-media-audio</name>
    <description></description>
    <license>MIT</license>
    <keywords>weex,plugin,nat,natjs,audio</keywords>
    <repo>https://github.com/Natjs/weex-nat-media-audio.git</repo>
    <issue>https://github.com/Natjs/weex-nat-media-audio/issues</issue>
    
     <!-- ios -->
     <platform name="ios">
         <framework src="NatAudio" type="podspec" spec="" />
         <config-file target="WeexpluginConfig.xml" parent="/*">
             <feature name="WXTestModule">
                 <param name="category" value="module" />
                 <param name="ios-package" value="WeexNatAudio" />
                 <param name="api" value="nat/media/audio" />
             </feature>
         </config-file>
         <header-file src="ios/WeexNatAudio.h"/>
         <source-file src="ios/WeexNatAudio.m"/>
     </platform>

     <!-- android -->
     <platform name="android">
        <config-file target="config.xml" parent="/*">
             <feature name="MediaAudioModule">
                 <param name="category" value="module" />
                 <param name="android-package" value="com.nat.weex.MediaAudioModule" />
                 <param name="api" value="nat/camera" />
             </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/*">
             <uses-permission android:name="android.permission.INTERNET" />
        </config-file>

        <source-file
             src="android/MediaAudioModule.java"
            target-dir="src/com/alibaba/weex/nat/MediaAudioModule.java" />

        <framework src="com.nat:media-audio:1.0.1" />
     </platform>

</plugin>
